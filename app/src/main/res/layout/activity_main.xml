<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.holas.weather_app.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/getWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Enter city..."
            android:text="Today weather" />

        <Button
            android:id="@+id/getWeatherLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Enter city..."
            android:text="Long term weather" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
